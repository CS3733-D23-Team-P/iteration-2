                                        </MFXComboBox>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <HBox>
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                                      text="Select a Temperature Type">
                                                    <font>
                                                        <Font size="18.0"/>
                                                    </font>
                                                </Text>
                                                <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="*"/>
