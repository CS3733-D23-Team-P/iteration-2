                                                <CheckBox fx:id="napkins" mnemonicParsing="false" text="Napkins">
                                                    <font>
                                                        <Font size="16.0"/>
                                                    </font>
                                                </CheckBox>
                                                <CheckBox fx:id="straw" mnemonicParsing="false" text="Straw">
                                                    <font>
                                                        <Font size="16.0"/>
